<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OthelloProject</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <!--<link rel="stylesheet" href="~/OthelloProject.styles.css" asp-append-version="true" /> -->
	<link rel="stylesheet" href="~/css/OthelloBoard.css" asp-append-version="true" />
	
</head>
<body>
@{
    var isLoggedIn = Context?.Session?.GetInt32("UserID") != null;
    var inGame = !string.IsNullOrEmpty(Context?.Session?.GetString("GameName"));
    var isBoardPage = Context?.Request?.Path.StartsWithSegments("/games/othelloboard", StringComparison.OrdinalIgnoreCase) == true;
    double? navWinRate = ViewBag.NavWinRate as double?;
    var navWinRatePct = navWinRate.HasValue ? (int)(navWinRate.Value * 100) : (int?)null;
    bool showWinRate = ViewBag.NavShowWinRate ?? true;
    string navWrClass = "wr-na";
    if (navWinRatePct.HasValue)
    {
        if (navWinRatePct <= 33) navWrClass = "wr-bad";
        else if (navWinRatePct <= 66) navWrClass = "wr-mid";
        else navWrClass = "wr-good";
    }
}
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light app-navbar mb-3">
            <div class="container-fluid">
                <a class="othello-logo" asp-area="" asp-controller="Games" asp-action="Games">Othello</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    @if (isLoggedIn && !(inGame && isBoardPage))
                    {
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link othello-nav-link" asp-area="" asp-controller="Games" asp-action="Games">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link othello-nav-link" asp-area="" asp-controller="User" asp-action="UserPage">Stats</a>
                            </li>
                        </ul>
                        <div class="d-flex align-items-center gap-0 ms-auto">
                            <a class="nav-link othello-nav-link" asp-area="" asp-controller="User" asp-action="Profile">Profile</a>
                            @if (showWinRate)
                            {
                                <div class="nav-winrate @navWrClass">
                                    <span class="nav-winrate-value">@(navWinRatePct.HasValue ? navWinRatePct + "%" : "NA")</span>
                                    <span class="nav-winrate-label">WR</span>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer app-footer">
        <div class="container">
            &copy; 2025 - OthelloProject - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
