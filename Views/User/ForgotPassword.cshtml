@model OthelloProject.ViewModels.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot Password";
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 70vh;">
    <div class="othello-form fra-border" style="max-width: 520px !important;">
        <h3 class="mb-3">Forgot password</h3>

        @if (!string.IsNullOrWhiteSpace(TempData["ForgotMessage"] as string))
        {
            <div class="alert alert-success">@TempData["ForgotMessage"]</div>
        }
        @if (!string.IsNullOrWhiteSpace(ViewBag.Error as string))
        {
            <div class="alert alert-danger">@ViewBag.Error</div>
        }

        <form asp-action="ForgotPassword" method="post" class="mb-0">
            @Html.AntiForgeryToken()

            <div class="othello-form-group">
                <label class="othello-label">Email</label>
                <input asp-for="Email" class="othello-input" type="email" required />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="othello-btn">Send</button>
                <a asp-controller="User" asp-action="Login" class="othello-btn-back">Back</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
