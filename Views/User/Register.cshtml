@{
    ViewData["Title"] = "Registrera användare";
}

<h2 class="mb-4">Registrera användare</h2>

@if (!string.IsNullOrWhiteSpace(ViewBag.Message as string))
{
    <div class="alert alert-info" role="alert">
        @ViewBag.Message
    </div>
}

<form asp-action="RegisterUser" method="post" class="card p-4 shadow-sm">
    <div class="mb-3">
        <label class="form-label" for="Username">Användarnamn</label>
        <input class="form-control" id="Username" name="Username" required />
    </div>

    <div class="mb-3">
        <label class="form-label" for="Email">E-post</label>
        <input class="form-control" type="email" id="Email" name="Email" required />
    </div>

    <div class="mb-3">
        <label class="form-label" for="Password">Lösenord</label>
        <input class="form-control" type="password" id="Password" name="Password" required />
    </div>

    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-primary">Registrera</button>
        <a class="btn btn-outline-secondary" asp-controller="Home" asp-action="Index">Avbryt</a>
    </div>
</form>
